#!/usr/bin/env php
<?php

require 'vendor/autoload.php';

use clearice\ClearIce;

ClearIce::addCommands(
    '\ntentan\dev\commands\Init',
    '\ntentan\dev\commands\Serve', 
    '\ntentan\dev\commands\Test'
);

ClearIce::addHelp();
ClearIce::setDescription('Ntentan PHP Framework Dev Tool');
ClearIce::setUsage("[command] [options] ...");
ClearIce::setStrict(true);
ClearIce::setFootnote('Report all bugs to jainooson@gmail.com');

$options = ClearIce::parse();

if(empty($options) || count($options['stand_alones'] ?? []) > 0) {
    echo ClearIce::getHelpMessage();
}
